<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"

    tools:context="Client.ui.main.UserInfoEditActivity" >
    
     <!--上部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
      
        android:gravity="center"
		android:background="@drawable/bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_edit_tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:text="返回"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="信息修改"
            android:textColor="@color/white"
            android:textSize="15sp" />
        
        
        <TextView
            android:id="@+id/user_edit_tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:text="保存"
            android:textColor="@color/white" />
    </LinearLayout>
    <!--顶部区域结束-->
    

  	<!-- 垂直滚动区 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />
            
            <RelativeLayout
        		android:id="@+id/user_package"
        		style="@style/Bar.White.Selectable"
        		android:layout_marginTop="@dimen/activity_vertical_margin">
        		
        		<TextView
            		android:id="@+id/package_first_icon"
            		android:layout_width="90dp"
            		android:layout_height="wrap_content"
            		android:layout_centerVertical="true"
            		android:text="ID"/>
        
         		<TextView
         		    android:id="@+id/user_edit_tv_id"
            		android:layout_width="match_parent"
            		android:layout_height="wrap_content"
            		android:layout_centerVertical="true"
            		android:textSize="15sp"
            		android:layout_toRightOf="@+id/package_first_icon"
            		android:background="@null"/>
    		</RelativeLayout>
    		
    		<View
            	android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />
            
           <RelativeLayout
        		android:id="@+id/user_package"
        		style="@style/Bar.White.Selectable">
        		
        		<TextView
            		android:id="@+id/package_first_icon"
            		android:layout_width="90dp"
            		android:layout_height="wrap_content"
            		android:layout_centerVertical="true"
            		android:text="密码"/>
        
         		<EditText
         		    android:id="@+id/user_edit_tv_pwd"         		    
            		android:layout_width="match_parent"
            		android:layout_height="wrap_content"
            		android:layout_centerVertical="true"
            		android:textColor="@color/colorFont"
            		android:textSize="15sp"
            		android:layout_toRightOf="@+id/package_first_icon"
            		android:background="@null"/>
    		</RelativeLayout>
    		
           <View
            	android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />
           
           
           
           
           
            <RelativeLayout
        		android:id="@+id/user_package"
        		style="@style/Bar.White.Selectable"
        		android:layout_marginTop="@dimen/activity_vertical_margin">
        		
        		<TextView
            		android:id="@+id/package_first_icon"
            		android:layout_width="90dp"
            		android:layout_height="wrap_content"
            		android:layout_centerVertical="true"
            		android:text="姓名"/>
        
         		<EditText
         		    android:id="@+id/user_edit_tv_name"
            		android:layout_width="match_parent"
            		android:layout_height="wrap_content"
            		android:layout_centerVertical="true"
            		android:textSize="15sp"
            		android:layout_toRightOf="@+id/package_first_icon"
            		android:background="@null"/>
    		</RelativeLayout>
    		
    		<View
            	android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />
            
           <RelativeLayout
        		android:id="@+id/user_package"
        		style="@style/Bar.White.Selectable">
        		
        		<TextView
            		android:id="@+id/package_first_icon"
            		android:layout_width="90dp"
            		android:layout_height="wrap_content"
            		android:layout_centerVertical="true"
            		android:text="电话"/>
        
         		<EditText
         		    android:id="@+id/user_edit_tv_telphone"
            		android:layout_width="match_parent"
            		android:layout_height="wrap_content"
            		android:layout_centerVertical="true"
            		android:textColor="@color/colorFont"
            		android:textSize="15sp"
            		android:layout_toRightOf="@+id/package_first_icon"
            		android:background="@null"/>
    		</RelativeLayout>
    		
           <View
            	android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" /> 
           
            <RelativeLayout
				android:id="@+id/user_position"
        		style="@style/Bar.White.Selectable"
        		android:layout_marginTop="@dimen/activity_vertical_margin">    
                
                <TextView
            		android:id="@+id/package_first_icon"
            		android:layout_width="90dp"
            		android:layout_height="wrap_content"
            		android:layout_centerVertical="true"
            		android:text="部门ID"/>
        
         		<TextView
         		    android:id="@+id/user_edit_tv_dept"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:layout_centerVertical="true"
            		android:textColor="@color/colorFont"
            		android:textSize="15sp"
            		android:layout_toRightOf="@+id/package_first_icon"/>
             
        
        		<ImageView
            		android:id="@+id/user_position__go"
            		style="@style/Icon"
            		android:layout_centerVertical="true"
            		android:layout_alignParentRight="true"
            		android:src="@drawable/next"/>
    		</RelativeLayout>
             <View
            	android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />
             
             
             <RelativeLayout
				android:id="@+id/user_position"
        		style="@style/Bar.White.Selectable">    
                
                <TextView
            		android:id="@+id/package_first_icon"
            		android:layout_width="90dp"
            		android:layout_height="wrap_content"
            		android:layout_centerVertical="true"
            		android:text="揽收包裹"/>
        
         		<TextView
         		    android:id="@+id/user_edit_tv_receive"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:layout_centerVertical="true"
            		android:textColor="@color/colorFont"
            		android:textSize="15sp"
            		android:layout_toRightOf="@+id/package_first_icon"/>
             
        
        		<ImageView
            		android:id="@+id/user_position__go"
            		style="@style/Icon"
            		android:layout_centerVertical="true"
            		android:layout_alignParentRight="true"
            		android:src="@drawable/next"/>
    		</RelativeLayout>
             <View
            	android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />
             
             <RelativeLayout
				android:id="@+id/user_position"
        		style="@style/Bar.White.Selectable">    
                
                <TextView
            		android:id="@+id/package_first_icon"
            		android:layout_width="90dp"
            		android:layout_height="wrap_content"
            		android:layout_centerVertical="true"
            		android:text="派送包裹"/>
        
         		<TextView
         		    android:id="@+id/user_edit_tv_delive"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:layout_centerVertical="true"
            		android:textColor="@color/colorFont"
            		android:textSize="15sp"
            		android:layout_toRightOf="@+id/package_first_icon"/>
             
        
        		<ImageView
            		android:id="@+id/user_position__go"
            		style="@style/Icon"
            		android:layout_centerVertical="true"
            		android:layout_alignParentRight="true"
            		android:src="@drawable/next"/>
    		</RelativeLayout>
             <View
            	android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />
             
             
             <RelativeLayout
				android:id="@+id/user_position"
        		style="@style/Bar.White.Selectable">    
                
                <TextView
            		android:id="@+id/package_first_icon"
            		android:layout_width="90dp"
            		android:layout_height="wrap_content"
            		android:layout_centerVertical="true"
            		android:text="转运包裹"/>
        
         		<TextView
         		    android:id="@+id/user_edit_tv_trans"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:layout_centerVertical="true"
            		android:textColor="@color/colorFont"
            		android:textSize="15sp"
            		android:layout_toRightOf="@+id/package_first_icon"/>
             
        
        		<ImageView
            		android:id="@+id/user_position__go"
            		style="@style/Icon"
            		android:layout_centerVertical="true"
            		android:layout_alignParentRight="true"
            		android:src="@drawable/next"/>
    		</RelativeLayout>
             <View
            	android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />
             	
        </LinearLayout>
    </ScrollView>
    

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="Client.ui.EsClient.ClientSearchActivity">


    <RelativeLayout
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorMyBackground"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/user"
            android:layout_height="32dp"
            android:layout_width="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/user"
            />
        <TextView
            android:id="@+id/package_tv_pack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:textColor="@color/colorBackground"
            android:text="卓越快递"
            android:textSize="18sp"/>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/b"
        android:layout_below="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_tv_shift"
            style="@style/click"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center"
            android:textColor="@color/colorFont" />

        <TextView
            android:id="@+id/login_tv_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="快件查询"
            android:textColor="@color/colorFont"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/login_tv_set"
            style="@style/click"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorFont" />
    </LinearLayout>

    <View
        android:id="@+id/c"
        android:layout_below="@+id/b"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="40dp"
        android:background="@color/colorLine" />


    <LinearLayout
        android:id="@+id/d"
        android:layout_below="@+id/c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp">
        <TextView
            android:id="@+id/es_tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="66dp"
            android:text="快递单号"
            android:visibility="gone"
            android:textColor="@color/colorMyBackground"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/e"
        android:layout_below="@+id/d"
        style="@style/Bar.White"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        >

        <ImageView
            android:layout_height="32dp"
            android:layout_width="32dp"
            android:id="@+id/package_info_package_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ppackage"/>


        <EditText
            android:id="@+id/es_et_id"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/colorFont"
            android:hint="快递单号"
            android:textSize="15sp"
            android:background="@null"
            android:layout_toRightOf="@+id/package_info_package_icon"
            />


        <ImageView
            android:id="@+id/es_iv_scan"
            android:layout_height="32dp"
            android:layout_width="32dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/pscan"/>
    </RelativeLayout>


    <View
        android:id="@+id/f"
        android:layout_below="@+id/e"
        android:layout_width="match_parent"
        android:layout_height="40dp"

         />

    <Button
        android:layout_below="@+id/f"
        android:id="@+id/es_bt_ok"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/btn_orange_selector"

        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="查询"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/package_paisong_rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:backgroundTint="@color/colorBackground"
        android:alpha="0.5"
        android:layout_alignParentBottom="true"
        >



            <RelativeLayout
                android:id="@+id/ll_bottom_rl_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="40dp"
                android:layout_centerVertical="true"
                 >

                <ImageView
                    android:id="@+id/ll_bottom_iv_one"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/home"
                    android:contentDescription="@null"/>

                <TextView
                    android:id="@+id/ll_bottom_tv_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_bottom_iv_one"
                    android:layout_centerHorizontal="true"
                    android:text="首页"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/ll_bottom_rl_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp" >

                <ImageView
                    android:id="@+id/ll_bottom_iv_three"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/my1"
                    android:contentDescription="@null" />


                <TextView
                    android:id="@+id/ll_bottom_tv_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_bottom_iv_three"
                    android:layout_centerHorizontal="true"
                    android:text="我的"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </RelativeLayout>





    </RelativeLayout>



</RelativeLayout>
